@model IEnumerable<HotelReservationSystemProject.Models.Room>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {

            <div class="col">
                <div class="card h-100">
                    <img src="~/Images/@item.ImageUrl" class="card-img-top" alt="Room Image">
                    <div class="card-body">
                        <h5 class="card-title">@item.RoomType</h5>
                        <p class="card-text">@item.Status</p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">SGD @item.Price</span>
                            <a asp-controller="RoomsItems" asp-action="AddToCart" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-primary">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>


        }
    </div>

}
else
{
    <p>This type of room is not found.</p>
}



