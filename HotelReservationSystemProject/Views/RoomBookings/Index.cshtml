@model IEnumerable<HotelReservationSystemProject.Models.RoomBooking>

@{
    ViewData["Title"] = "Index";
}

<h1>RoomBooking</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receptionist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest.GuestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receptionist.ReceptionistId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoomBookingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoomBookingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomBookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
